<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.emergence.study_app.Activity.ReferAndEarn">
    <RelativeLayout
        android:id="@+id/rr_top"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refer &amp; Earn"
            android:fontFamily="@font/roboto"
            android:layout_toEndOf="@id/iv_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="start"
            android:textStyle="bold"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_above="@id/invite"
        android:layout_width="match_parent"
        android:layout_below="@id/rr_top"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/refback"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Refer &amp; Earn"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"/>
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_margin="10dp"
                android:textColor="@color/text_color"
                android:textSize="15dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"/>
            <TextView
                android:id="@+id/ref_code"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                android:paddingRight="20dp"
                android:background="@drawable/rectangle_dott_small"
                android:textColor="#ccc"
                android:textSize="20dp"
                android:visibility="visible"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step to Redeem Benefits"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1). Share App to Friends.\n2). Tell him/her to make registration with your referral ID."
                android:textStyle="normal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color"
                android:textSize="15dp"
                android:fontFamily="@font/roboto"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/invite"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/blue_button_background"
        android:text="Invite Friends"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"/>
</RelativeLayout>