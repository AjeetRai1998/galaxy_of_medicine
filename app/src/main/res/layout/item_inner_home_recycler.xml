<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:id="@+id/aub_class_layout"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="6dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardElevation="4dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:id="@+id/tv_expire_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="2dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="2dp"
                        android:textColor="@color/white"
                        android:background="@drawable/expire_bg"
                        android:text="Expires on: 23-11-2021"/>
                    <TextView
                        android:id="@+id/tv_combo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Combo"
                        android:textSize="8sp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/combo_bg"
                        android:textColor="@color/white"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject Name"
                android:id="@+id/sub_name"
                android:textColor="@color/black"
                android:paddingStart="4dp"
                android:maxLines="2"
                android:fontFamily="@font/roboto_slab"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offer price"
                    android:id="@+id/cut_price_rec"
                    android:textStyle="italic"
                    android:textColor="#878787"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:id="@+id/price_rec"
                    android:textColor="@color/red_btn_bg_color"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:id="@+id/desc"
                android:maxLines="1"
                android:visibility="gone"
                android:fontFamily="@font/roboto_slab"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>