<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context="com.emergence.study_app.Custom_toolbar">
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:id="@+id/menu_icon"
           android:layout_gravity="center"
           android:src="@drawable/icmenu"/>
       <ImageView
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:visibility="gone"
           android:id="@+id/back_btn"
           android:layout_gravity="center"
           android:src="@drawable/ic_back"/>
   </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/usr_profile"
        android:layout_gravity="center"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:src="@drawable/profile_student"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="DashBoard"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:focusable="true"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:id="@+id/main_titile"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/img_notification"
        android:src="@drawable/ic_baseline_notifications_24"
        android:layout_gravity="center"/>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:visibility="gone"
       android:paddingLeft="15dp"
       android:layout_marginLeft="10sp"
       android:gravity="center"
       android:background="@drawable/bg_button_buy"
       android:orientation="horizontal">
       <pl.droidsonroids.gif.GifImageView
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_gravity="center"
           android:id="@+id/live_session"
           android:src="@mipmap/gif_live" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingRight="20sp"
           android:layout_gravity="center"
           android:text="Live"
           android:textColor="@color/colorPrimary"/>
   </LinearLayout>

</LinearLayout>